#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;
use Starweb\Command\ApiCommand;

$files = array(
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
);

$autoloadFile = null;

foreach ($files as $file) {
    if (file_exists($file)) {
        $autoloadFile = $file;
        break;
    }
}

if (!empty($autoloadFile)) {
    require $autoloadFile;

    $application = new Application();
    $application->add(new ApiCommand());
    $application->run();
} else {
    echo 'you need to run "composer install" to handle your dependencies and to generate the autoload files';
}